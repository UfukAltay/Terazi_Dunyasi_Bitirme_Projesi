@model IEnumerable<Terazi_Dunyasi_Project_v12.Kategoriler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/YonetimPanel/Views/Shared/_YonetimSablon.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KategoriAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KategoriAciklama)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FotoYol)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KategoriAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KategoriAciklama)
            </td>
            <td>
                @if (item.FotoYol == null)
                {
                    <img src="~/Images/no-photo.png" width="100" height="100" />
                }
                else
                {
                    <img src="@Html.DisplayFor(modelItem => item.FotoYol)" width="100" height="100" />
                } 
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.KategoriID }) |
                @Html.ActionLink("Details", "Details", new { id = item.KategoriID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.KategoriID })
            </td>
        </tr>
    }

</table>
